/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.bottom {
  position: absolute;
  bottom: 0px;
  width: 100%;
  background: #eee;
}
.bottom-nav{
    position: relative;
    display: flex;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
}
.item {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    width: 100%;
    text-align: center;
    padding: 16px;
    font-size: 14px;
}

