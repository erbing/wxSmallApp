/**index.wxss**/
image {
    width: 100%;
}
swiper{
  height: 240px;
}

.indicator-color{
  color: rgba(0, 0, 0, .3)
}

.indicator-active-color{
  color: rgba(0, 0, 0, .23)
}

navigator {
  height:auto;
  width:25%;
  display:block;
  float:left;
  text-align:center;
  font-size: 16px;
  height: 50px;
  line-height: 50px;
  background: #eee;
  position: absolute;
  bottom: 0px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.bottom {
  position: absolute;
  bottom: 0px;
  width: 100%;
  background: #eee;
}
.bottom-nav{
    position: relative;
    display: flex;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
}
.item {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    width: 100%;
    text-align: center;
    padding: 16px;
    font-size: 14px;
}

.btn-area{
  width: 100%;
}
